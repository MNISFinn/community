/* components/orderItem/index.wxss */
.order-container {
  border-radius:10px;
  background-color: white;
  box-shadow: 2px 2px 1px #eeeeee;
  margin: 50rpx 10rpx 50rpx 10rpx;
  padding: 20rpx 40rpx 20rpx 40rpx;
  width: 85%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.num, .store-title, .self-title {
  font-size: 30rpx;
}

.store, .self {
  margin: 15rpx 0;
}

.goods-area {
  display: flex;
  justify-content: space-between;
}

.status {
  font-size: 30rpx;
  text-align: right;
  color: #d1d1d1;
}