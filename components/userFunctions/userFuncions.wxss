/* components/userFuncions.wxss */
.function-area {
  border-radius:10px;
  background-color: white;
  box-shadow: 2px 2px 1px #eeeeee;
  margin: 50rpx 10rpx 50rpx 10rpx;
  padding: 50rpx 40rpx 50rpx 40rpx;
  width: 480rpx;
  display: flex;
  justify-content: space-between;
}

.title-area {
  display: flex;
  flex-direction: column;
}

.item-theme {
  font-size: 16px;
  margin-bottom: 40rpx;
  font-weight: 800;
}

.btn-item {
  background:none;
  color: #e2a140;
  border: 1px solid #e2a140;
  border-radius:25px;
}