/* pages/messages/messages.wxss */
.chat-container {
  padding: 0;
  background-image:
  -webkit-linear-gradient(0deg, #eeeeee 1%,transparent 3%,transparent),
  -webkit-linear-gradient(90deg,#eeeeee 1%,transparent 3%,transparent);
  background-image:
  -moz-linear-gradient(0deg,#eeeeee 1%,transparent 3%,transparent),
  -moz-linear-gradient(90deg,#eeeeee 1%,transparent 3%,transparent);
  background-image:
  -o-linear-gradient(0deg,#eeeeee 1%,transparent 3%,transparent),
  -o-linear-gradient(90deg,#eeeeee 1%,transparent 3%,transparent);
  background-image:
  linear-gradient(0deg,#eeeeee 1%,transparent 3%,transparent),
  linear-gradient(90deg,#eeeeee 1%,transparent 3%,transparent);
  background-size:20px 20px;
  background-attachment:fixed
}

.inputRoom {
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #eee;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 20;
}

input {
  width: 78vw;
  height: 9.33vw;
  background-color: #eee;
  border-radius: 40rpx;
  margin-left: 2vw;
  padding: 0 3vw;
  font-size: 28rpx;
  color: #444;
}

.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #eabfc3;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fb9c65;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

 /*向左*/
 .triangle_border_left {
  width: 0;
  height: 0;
  border-width: 10px 25px 25px 0;
  border-style: solid;
  border-color: transparent #eabfc3 transparent transparent;
  /*透明       黄   透明        透明 */
  margin: 40px auto;
  position: relative;
}


/*向右*/
.triangle_border_right {
  width: 0;
  height: 0;
  border-width: 0px 30px 20px 13px;
  border-style: solid;
  border-color: transparent transparent transparent #fb9c65;
  /*透明       透明        透明         黄*/
  margin: 40px auto;
  position: relative;
}