/* pages/profile/profile.wxss */
.container {
  padding: 0;
  background-image:
  -webkit-linear-gradient(0deg, #eeeeee 1%,transparent 3%,transparent),
  -webkit-linear-gradient(90deg,#eeeeee 1%,transparent 3%,transparent);
  background-image:
  -moz-linear-gradient(0deg,#eeeeee 1%,transparent 3%,transparent),
  -moz-linear-gradient(90deg,#eeeeee 1%,transparent 3%,transparent);
  background-image:
  -o-linear-gradient(0deg,#eeeeee 1%,transparent 3%,transparent),
  -o-linear-gradient(90deg,#eeeeee 1%,transparent 3%,transparent);
  background-image:
  linear-gradient(0deg,#eeeeee 1%,transparent 3%,transparent),
  linear-gradient(90deg,#eeeeee 1%,transparent 3%,transparent);
  background-size:20px 20px;
  background-attachment:fixed
}
.userinfo {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: rgb(59, 59, 59);
  width: 100%;
  /* padding-bottom: 200rpx; */
  font-weight: 600;
  font-size: 1rem;
  }

.userinfo-avatar {
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx 20rpx 20rpx 20rpx;
  border-radius: 50%;
}

.login-btn {
  float: left;
  background-color: #e2a140;
  margin: auto 0;
  border-radius:25px;
}

.info-btn {
  font-size: 12px!important;
  background:none;
  color: #e2a140;
  border: 1px solid #e2a140;
  border-radius:25px;
}
