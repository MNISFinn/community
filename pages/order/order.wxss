/* pages/order/order.wxss */
page {
  height: 100%;
}

.container {
  padding: 0;
  /* margin: 0 20rpx; */
  background-image:
  -webkit-linear-gradient(0deg, #eeeeee 1%,transparent 3%,transparent),
  -webkit-linear-gradient(90deg,#eeeeee 1%,transparent 3%,transparent);
  background-image:
  -moz-linear-gradient(0deg,#eeeeee 1%,transparent 3%,transparent),
  -moz-linear-gradient(90deg,#eeeeee 1%,transparent 3%,transparent);
  background-image:
  -o-linear-gradient(0deg,#eeeeee 1%,transparent 3%,transparent),
  -o-linear-gradient(90deg,#eeeeee 1%,transparent 3%,transparent);
  background-image:
  linear-gradient(0deg,#eeeeee 1%,transparent 3%,transparent),
  linear-gradient(90deg,#eeeeee 1%,transparent 3%,transparent);
  background-size:20px 20px;
  background-attachment:fixed
}

.info-form {
  margin: 20rpx;
  width: 90%;
}

.goods-module {
  border: 1px solid #999999;
  /* border-radius: 10%; */
  margin-bottom: 20rpx;
}

.form-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.btn-area {
  width: 100%;
}

.update-btn {
  background: none;
  color: #e2a140;
  border: 1px solid #e2a140;
  margin: auto 0;
  border-radius:25px;
}
